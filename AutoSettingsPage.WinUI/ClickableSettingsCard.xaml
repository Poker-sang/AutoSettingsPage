<controls:SettingsCard
    x:Class="AutoSettingsPage.WinUI.ClickableSettingsCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fluent="using:FluentIcons.WinUI"
    xmlns:local="using:AutoSettingsPage.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Click="Clicked"
    Description="{x:Bind local:SettingsEntryHelper.DescriptionControl(Entry)}"
    Header="{x:Bind Entry.Header}"
    IsClickEnabled="True"
    mc:Ignorable="d">
    <controls:SettingsCard.ActionIcon>
        <fluent:SymbolIcon Symbol="{x:Bind Entry.ActionIcon}" />
    </controls:SettingsCard.ActionIcon>
    <controls:SettingsCard.HeaderIcon>
        <fluent:SymbolIcon Symbol="{x:Bind Entry.Icon}" />
    </controls:SettingsCard.HeaderIcon>
</controls:SettingsCard>
